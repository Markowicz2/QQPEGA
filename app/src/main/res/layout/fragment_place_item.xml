<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fundo_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:layout_marginTop="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"

        android:background="@color/white">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo_bg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"

            android:layout_marginBottom="3dp"
            android:background="@drawable/bg_logo_open" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo_item"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5.5dp"
            android:src="@mipmap/ic_launcher_round"/>


        <TextView
            android:id="@+id/nome_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/horario_a_item"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_logo_item"
            android:layout_toRightOf="@+id/img_logo_item"

            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--Avaliar essa parte ainda-->
        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/horario_a_item"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_favorite_border" />

        <ImageView
            android:id="@+id/img_promocao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/horario_a_item"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/img_favorite"
            android:src="@drawable/ic_promocao" />


        <TextView
            android:id="@+id/horario_a_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_item"

            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_logo_item"
            android:layout_toRightOf="@+id/img_logo_item"
            android:text="@string/aberto"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/horario_f_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_item"

            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_logo_item"
            android:layout_toRightOf="@+id/img_logo_item"
            android:text="@string/fechado"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/horario_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_item"
            android:layout_toEndOf="@+id/horario_a_item"
            android:layout_toRightOf="@+id/horario_a_item"
            android:text="" />

        <TextView
            android:id="@+id/distancia_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horario_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/img_logo_item"
            android:layout_toRightOf="@+id/img_logo_item"
            android:text="1,5KM" />

        <TextView
            android:id="@+id/entrada_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horario_item"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"

            android:text="R$500" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>